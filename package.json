{
	"name": "delegate-it",
	"description": "Lightweight event delegation",
	"version": "1.1.0-5",
	"repository": "bfred-it/delegate-it",
	"license": "MIT",
	"files": [
		"index.js",
		"index.d.ts"
	],
	"keywords": [
		"event",
		"delegate",
		"delegation"
	],
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.2.1",
		"@typescript-eslint/eslint-plugin": "^1.4.2",
		"ava": "^1.3.1",
		"eslint-config-xo-typescript": "^0.8.0",
		"jsdom": "^13.2.0",
		"npm-run-all": "^4.1.5",
		"sinon": "^1.17.6",
		"typescript": "^3.3.3333",
		"xo": "*"
	},
	"scripts": {
		"test": "tsc && xo !index.js && ava",
		"prepare": "tsc",
		"build": "tsc",
		"_watch-build": "tsc --watch",
		"_watch-test": "ava --watch",
		"watch": "run-p --silent _watch-*"
	},
	"xo": {
		"extends": "xo-typescript",
		"extensions": [
			"ts"
		],
		"envs": [
			"browser"
		],
		"rules": {
			"prefer-rest-params": 0,
			"valid-jsdoc": 0,
			"max-params": 0,
			"@typescript-eslint/promise-function-async": 0
		}
	}
}
