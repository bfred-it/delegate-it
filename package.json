{
  "name": "delegate-it",
  "version": "2.0.0-0",
  "description": "Lightweight event delegation",
  "keywords": [
    "delegate",
    "delegation",
    "event"
  ],
  "repository": "fregante/delegate-it",
  "license": "MIT",
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "tsc --sourceMap false",
    "test": "tsc && xo && ava",
    "watch": "run-p --silent watch:*",
    "watch:build": "tsc --watch",
    "watch:test": "ava --watch"
  },
  "xo": {
    "envs": [
      "browser"
    ],
    "rules": {
      "prefer-rest-params": 0,
      "valid-jsdoc": 0,
      "max-params": 0,
      "@typescript-eslint/promise-function-async": 0,
      "@typescript-eslint/no-namespace": 0
    }
  },
  "ava": {
    "require": [
      "esm"
    ]
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^0.7.0",
    "ava": "^3.6.0",
    "esm": "^3.2.25",
    "jsdom": "^16.2.2",
    "npm-run-all": "^4.1.5",
    "sinon": "^9.0.1",
    "typescript": "^3.8.3",
    "xo": "^0.28.3"
  }
}
