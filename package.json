{
	"name": "delegate-it",
	"version": "3.0.0-0",
	"description": "Lightweight event delegation",
	"keywords": [
		"delegate",
		"delegation",
		"event"
	],
	"repository": "fregante/delegate-it",
	"license": "MIT",
	"type": "module",
	"main": "index.js",
	"module": "index.js",
	"files": [
		"index.js",
		"index.d.ts"
	],
	"scripts": {
		"build": "tsc",
		"prepack": "tsc --sourceMap false",
		"test": "tsc && xo && ava",
		"watch": "run-p --silent watch:*",
		"watch:build": "tsc --watch",
		"watch:test": "ava --watch"
	},
	"xo": {
		"envs": [
			"browser"
		],
		"rules": {
			"import/extensions": "off",
			"import/no-useless-path-segments": "off",
			"max-params": "off",
			"unicorn/import-index": "off"
		}
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.9.0",
		"ava": "^3.15.0",
		"jsdom": "^16.5.1",
		"npm-run-all": "^4.1.5",
		"sinon": "^9.2.4",
		"typescript": "^4.2.3",
		"xo": "^0.38.2"
	},
	"dependencies": {
		"typed-query-selector": "^2.4.1"
	}
}
